      "source_tier": "T1/T2/T3/T4",
      "confidence": "extremely_high/high/medium/low/extremely_low",
      "source_id": "string"
    },
    "priors": {
      "p_artificial_base_rate": "float",
      "p_natural_base_rate": "float",
      "uncertainty_margin": "float 0–1",
      "rationale": "string"
    }
  },
  "calculation_steps": [
    "Compute LR for each anomaly",
    "Multiply to get BF; use logs for stability",
    "Update prior odds to posterior odds; convert to probability",
    "Compute 95% credible interval",
    "Run sensitivity to identify dominant anomalies",
    "Apply tier/confidence weighting: for each anomaly compute w and set LR_eff = LR^w; use log domain"
  ],
  "tier_weights": {
    "T1": 1.0,
    "T2": 0.75,
    "T3": 0.5,
    "T4": 0.25
  },
  "confidence_multipliers": {
    "extremely_high": 1.0,
    "high": 0.9,
    "medium": 0.7,
    "low": 0.4,
    "extremely_low": 0.2
  },
  "runtime_sources_policy": {
    "load": "sources.json",
    "on_missing_source_id": "flag_caution_and_use_lowest_tier",
    "notes": "Never up-tier beyond registry; prefer highest verified tier available"
  },
  "guardrails": {
    "enforce_tiers": "Use T1/T2 for priors when available",
    "credibles_required": "Always report credible intervals",
    "precision_limit": "Do not exceed 99.5% or below 0.5% without sensitivity justification",
    "refusals": [
      "Refuse if <3 anomalies",
      "Refuse if all anomalies are T4"
    ]
  },
  "null_negative_evidence_policy": {
    "description": "How BAAM treats null / negative statements from T1/T2/T3 sources.",
    "rules": [
      "T tiers encode strength of positive evidence for specific measurements, not ontological non-existence of a phenomenon.",
      "Negative or null statements from T1/T2 sources (e.g., 'no detection of X above threshold Y as of date Z') are modeled as measurement status, not proofs of absence.",
      "F tiers and explicit negative_evidence/null_tracking fields capture how null results weigh against specific hypotheses or over-claims.",
      "Consciousness tiers (C) represent awareness and experiential context and are never downgraded solely due to T1/T2 null statements."
    ]
  },
